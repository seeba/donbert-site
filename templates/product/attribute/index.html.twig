{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">

                </div>
                <div class="card-body">
                    <table id="products" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Nazwa</th>
                                <th>Akcja</th>
                            </tr>
                        </thead> 
                        <tbody>
                            {% for attribute in attributes %}
                                <tr>
                                    <td>
                                        {{attribute.name}}
                                        
                                    </td>
                                    <td>
                                    
                                    </td>
                                </tr>
                               
                            {% endfor %}
                        </tbody>

                    </table>
                </div>
                <div class="card-footer">
                    <a href="{{ path('admin-product-attribute-add')}}" class="btn btn-primary">Dodaj nowy atrybut</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <!-- DataTables  & Plugins -->
